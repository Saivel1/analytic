SELECT product_id,
       name,
       price,
       round(price / 1.2 * 0.2, 2) as tax,
       round(price -(price / 1.2 * 0.2), 2) as price_before_tax
FROM   products
ORDER BY price_before_tax desc, product_id

SELECT product_id,
       name,
       price as old_price,
       round(price * 1.05, 1) as new_price
FROM   products
ORDER BY new_price desc, product_id
